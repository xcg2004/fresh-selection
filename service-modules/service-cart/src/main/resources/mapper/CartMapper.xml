<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xcg.servicecart.mapper.CartMapper">

    <select id="scrollPage" resultType="com.xcg.freshcommon.domain.cart.entity.Cart">
        select * from cart
        <where>
            <if test="lastId != null">
                id &lt; #{lastId}
            </if>
            <if test="lastCreateTime != null">
                and create_time &lt; #{lastCreateTime}
            </if>

        </where>
        order by id, create_time desc
        limit #{pageSize}
    </select>
</mapper>
